{
    "name": "krypton-engine",
    "version": "1.0.0",
    "description": "A simple game engine using Vulkan and Metal as a backend",
    "homepage": "https://github.com/spnda/krypton_engine",
    "dependencies": [
        "fmt",
        "glfw3",
        "glm",
        {
            "name": "imgui",
            "features": [ "glfw-binding", "vulkan-binding" ],
            "platform": "!osx"
        },
        {
            "name": "imgui",
            "features": [ "glfw-binding", "metal-binding" ],
            "platform": "osx"
        },
        "tinygltf",
        {
            "name": "vk-bootstrap",
            "platform": "!osx"
        },
        {
            "name": "vulkan-memory-allocator",
            "platform": "!osx"
        }
    ],
    "supports": "linux | windows | osx"
}
